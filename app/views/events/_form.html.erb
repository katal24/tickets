<%= form_with(model: event, local: true) do |form| %>


  <% if @event.errors.any? %>y
    <div id="error_explanation">
      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :artist %>
    <%= form.text_field :artist, id: :event_artist %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :event_description %>
  </div>

  <div class="field">
    <%= form.label :price_low %>
    <%= form.text_field :price_low, id: :event_price_low %>
  </div>

  <div class="field">
    <%= form.label :price_high %>
    <%= form.text_field :price_high, id: :event_price_high %>
  </div>

  <div class="field">
    <%= form.label :event_date %>
    <%= form.date_field :event_date, id: :event_date %>
  </div>

  <div class="field">
    <%= form.label :can_return %>
    <%= form.check_box :can_return, id: :event_can_return %>
  </div>

  <div class="field">
    <%= form.label :of_age %>
    <%= form.check_box :of_age, id: :event_of_age %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
