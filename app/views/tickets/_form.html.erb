<%= form_with(model: ticket, local: true) do |form| %>
  <% if ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% ticket.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  

<div class="form-group">
  <div class="field row">
    <div class="col-md-1"><%= form.label :seat_id_seq %>  </div>
    <div class="col-md-2"><%= form.text_field :seat_id_seq, id: :ticket_seat, value: ticket.seat_id_seq, readonly: @event, class: "form-control" %></div>
  </div>
</div>

<div class="form-group">
  <div class="field row">
   <div class="col-md-1"> <%= form.label :price %></div>
   <div class="col-md-2"> <%= form.text_field :price, id: :ticket_seat, value: ticket.price, readonly: @event, class: "form-control" %></div>   
  </div>
</div>

    <div class="field" hidden>
      <%= form.label :event_id %>
      <%= form.select :event_id, options_for_select(events.collect {|e| e.id}, ticket.event_id), {} %>
    </div>

  <div class="field" hidden>
    <%= form.label :user_id %>  
    <%= form.text_field :user_id, id: :ticket_user_id, value: current_user.id %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
